<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
    android:layout_marginVertical="@dimen/activity_vertical_margin"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ONLINE TRAININGS"
        android:textColor="@android:color/holo_red_dark"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:text="give us your information and we will get back to you"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:background="@drawable/edit_text_box"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:id="@+id/et_onlinetrainings_name"
        android:hint="Name*"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:background="@drawable/edit_text_box"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:id="@+id/et_onlinetrainings_email"
        android:hint="Email*"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:background="@drawable/edit_text_box"
        android:id="@+id/et_onlinetrainings_phone"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:hint="Phone"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:lines="3"
        android:minLines="3"
        android:gravity="top|left"
        android:maxLines="6"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:background="@drawable/edit_text_box"
        android:id="@+id/et_onlinetrainings_queries"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:hint="Any Query?"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="SEND"
        android:layout_gravity="right"
        android:textColor="@android:color/white"
        android:id="@+id/send_online_trainings"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>

</LinearLayout>